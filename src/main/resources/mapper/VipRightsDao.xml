<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.secret.dao.VipRightsDao">

    <resultMap type="com.secret.entity.VipRights" id="VipRightsMap">
        <result property="id" column="id" jdbcType="INTEGER"/>
        <result property="title" column="title" jdbcType="VARCHAR"/>
        <result property="url" column="url" jdbcType="VARCHAR"/>
        <result property="vipLevel" column="vip_level" jdbcType="VARCHAR"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="VipRightsMap">
        select
          id, title, url, vip_level
        from vip_rights
        where id = #{id}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="VipRightsMap">
        select
          id, title, url, vip_level
        from vip_rights
        <where>
            <if test="id != null">
                and id = #{id}
            </if>
            <if test="title != null and title != ''">
                and title = #{title}
            </if>
            <if test="url != null and url != ''">
                and url = #{url}
            </if>
            <if test="vipLevel != null and vipLevel != ''">
                and vip_level = #{vipLevel}
            </if>
        </where>
        limit #{pageable.offset}, #{pageable.pageSize}
    </select>

    <!--统计总行数-->
    <select id="count" resultType="java.lang.Long">
        select count(1)
        from vip_rights
        <where>
            <if test="id != null">
                and id = #{id}
            </if>
            <if test="title != null and title != ''">
                and title = #{title}
            </if>
            <if test="url != null and url != ''">
                and url = #{url}
            </if>
            <if test="vipLevel != null and vipLevel != ''">
                and vip_level = #{vipLevel}
            </if>
        </where>
    </select>
    <select id="queryList"  resultMap="VipRightsMap">
        select
        id, title, url, vip_level
        from vip_rights
        <where>
            <if test="id != null">
                and id = #{id}
            </if>
            <if test="title != null and title != ''">
                and title = #{title}
            </if>
            <if test="url != null and url != ''">
                and url = #{url}
            </if>
            <if test="vipLevel != null and vipLevel != ''">
                and vip_level = #{vipLevel}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="id" useGeneratedKeys="true">
        insert into vip_rights(title, url, vip_level)
        values (#{title}, #{url}, #{vipLevel})
    </insert>

    <insert id="insertBatch" keyProperty="id" useGeneratedKeys="true">
        insert into vip_rights(title, url, vip_level)
        values
        <foreach collection="entities" item="entity" separator=",">
        (#{entity.title}, #{entity.url}, #{entity.vipLevel})
        </foreach>
    </insert>

    <insert id="insertOrUpdateBatch" keyProperty="id" useGeneratedKeys="true">
        insert into vip_rights(title, url, vip_level)
        values
        <foreach collection="entities" item="entity" separator=",">
            (#{entity.title}, #{entity.url}, #{entity.vipLevel})
        </foreach>
        on duplicate key update
        title = values(title),
        url = values(url),
        vip_level = values(vip_level)
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update vip_rights
        <set>
            <if test="title != null and title != ''">
                title = #{title},
            </if>
            <if test="url != null and url != ''">
                url = #{url},
            </if>
            <if test="vipLevel != null and vipLevel != ''">
                vip_level = #{vipLevel},
            </if>
        </set>
        where id = #{id}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from vip_rights where id = #{id}
    </delete>

</mapper>

